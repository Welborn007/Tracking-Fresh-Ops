<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/LightRed"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_height="150dp">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_gravity="center"
                android:src="@drawable/default_logo"
                app:civ_border_width="2dp"
                app:civ_border_color="@android:color/transparent"/>

            <TextView
                android:id="@+id/name_Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="Guest"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/payment_logo"
                    android:src="@drawable/ic_payment"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="@string/payment"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/payment_logo"
                    android:padding="20dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:src="@drawable/ic_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginRight="5dp"
                android:background="#ccc"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/profile_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/account_logo"
                    android:src="@drawable/ic_myaccount"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="@string/myaccount"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/account_logo"
                    android:padding="20dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:src="@drawable/ic_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginRight="5dp"
                android:background="#ccc"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/assigned_stock_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/assigned_stock_logo"
                    android:src="@drawable/ic_myaccount"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="@string/assigned_stock"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/assigned_stock_logo"
                    android:padding="20dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:src="@drawable/ic_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginRight="5dp"
                android:background="#ccc"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/stock_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/stock_logo"
                    android:src="@drawable/ic_myaccount"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="@string/stocks"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/stock_logo"
                    android:padding="20dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:src="@drawable/ic_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginRight="5dp"
                android:background="#ccc"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/route_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/route"
                    android:src="@drawable/ic_myaccount"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Route"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/route"
                    android:padding="20dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:src="@drawable/ic_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginRight="5dp"
                android:background="#ccc"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/help_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/help_logo"
                    android:src="@drawable/ic_help"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="@string/help"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/help_logo"
                    android:padding="20dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:src="@drawable/ic_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginRight="5dp"
                android:background="#ccc"/>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/legal_logo"
                    android:src="@drawable/ic_legal"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="@string/legal"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/legal_logo"
                    android:padding="20dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:src="@drawable/ic_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginRight="5dp"
                android:background="#ccc"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>