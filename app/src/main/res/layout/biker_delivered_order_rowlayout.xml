<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/subItemCard_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/LightGray"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/order_status"
                android:src="@drawable/rejected"
                android:layout_alignParentRight="true"
                android:layout_width="120dp"
                android:layout_height="120dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/customer_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Welborn Machado"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Price:"
                            android:textColor="@color/DarkGray"
                            android:textSize="@dimen/text_size14"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/total_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size14"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/payment_confirmHolder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment Confirmation:"
                            android:textColor="@color/DarkGray"
                            android:textSize="@dimen/text_size14"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/payment_confirm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Received"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size14"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/payment_modeHolder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment Mode:"
                            android:textColor="@color/DarkGray"
                            android:textSize="@dimen/text_size14"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/payment_mode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Credit Card"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size14"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:visibility="gone">

                        <mehdi.sakout.fancybuttons.FancyButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="5dp"
                            fancy:fb_borderColor="#000000"
                            fancy:fb_borderWidth="1dp"
                            fancy:fb_defaultColor="@color/colorPrimary"
                            fancy:fb_focusColor="#2e5071"
                            fancy:fb_fontIconSize="14dp"
                            fancy:fb_radius="5dp"
                            fancy:fb_text="Accept"
                            fancy:fb_textColor="@color/DarkRed"
                            fancy:fb_textSize="14sp" />

                        <mehdi.sakout.fancybuttons.FancyButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            fancy:fb_borderColor="#000000"
                            fancy:fb_borderWidth="1dp"
                            fancy:fb_defaultColor="@color/colorPrimary"
                            fancy:fb_focusColor="#2e5071"
                            fancy:fb_fontIconSize="14dp"
                            fancy:fb_radius="5dp"
                            fancy:fb_text="Reject"
                            fancy:fb_textColor="@color/Gray"
                            fancy:fb_textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order No."
                        android:textColor="@color/DarkGray"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/order_number"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circulargreen_btn"
                        android:text="1"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>